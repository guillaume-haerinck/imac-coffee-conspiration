<div class="title-bar">
    <div class="title">
        <slot name="icon" class="icon"><img src="<%= assetsUrl %>/images/icons/bean.jpg"></slot>
        <slot name="title" class="text"><p>Change me by adding slot="title" to a tag</p></slot>
    </div>
    <div class="controls">
        <% if (pcWindowOptions.controls.full) { %><button class="control">t</button><% } %>
        <% if (pcWindowOptions.controls.help) { %><button class="control">?</button><% } %>
        <button class="control">
            <img src="<%= assetsUrl %>/images/icons/close.png">
        </button>
    </div>
</div>

<% if (pcWindowOptions.bMenu) { %>
<div class="menu-bar"><span>File</span><span>Edit</span><span>View</span><span>Help</span></div>
<% } %>

<div class="content">
    <slot>To be replaced by content inside the tag</slot>
</div>
